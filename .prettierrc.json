{
	"printWidth": 80,
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.md"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ["**/bin/*.js"],
			"options": {
				"useTabs": false
			}
		},
		{
			"files": ["**/code/base_emulator.js"],
			"options": {
				"useTabs": false
			}
		}
	],
	"arrowParens": "always",
	"importOrder": [
		"^react$",
		"<THIRD_PARTY_MODULES>",
		"^classnames$",
		"^lodash$",
		"^\\.\\.(?!.*\\.css).*$",
		"^[./](?!.*\\.css).*$",
		"bootstrap\\.min\\.css$",
		"\\.css$"
	],
	"importOrderExplanation": {
		"^\\.\\.(?!.*\\.css).*$": "any non-css local file from parent folder (ex: ../locales)",
		"^[./](?!.*\\.css).*$": "any non-css local file from current folder (ex: ./Something)"
	},
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true
}
