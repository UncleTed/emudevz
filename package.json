{
  "name": "emudevz",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@codemirror/lang-javascript": "^0.19.7",
    "@codemirror/theme-one-dark": "^0.19.1",
    "@uiw/react-codemirror": "^4.6.0",
    "bootstrap": "^4.6.0",
    "classnames": "^2.2.6",
    "lodash": "^4.17.20",
    "pixi.js": "^6.3.0",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "dev": "npm run web",
    "web": "react-scripts start",
    "desktop": "concurrently \"cross-env BROWSER=none react-scripts start\" \"cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "deploy": "bash ./scripts/deploy.sh",
    "build:web": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build:windows": "bash ./scripts/build-desktop-windows.sh",
    "build:linux": "bash ./scripts/build-desktop-linux.sh",
    "___": "___",
    "test": "react-scripts test",
    "electron": "electron",
    "react-scripts": "react-scripts",
    "build:ghpages": "cross-env GENERATE_SOURCEMAP=false PUBLIC_URL=/emudevz react-scripts build",
    "build:electron": "cross-env GENERATE_SOURCEMAP=false PUBLIC_URL=./ react-scripts build"
  },
  "main": "desktop.js",
  "build": {
    "productName": "emudevz",
    "extends": null,
    "extraFiles": [
      "icons/icon-512x512.png"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "../public/icons/icon-windows.ico",
      "uninstallerIcon": "../public/icons/icon-windows.ico"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "6.0.12",
    "electron-builder": "21.2.0",
    "husky": "^1.3.1",
    "prettier": "2.2.1",
    "pretty-quick": "^1.10.0"
  }
}
