{
  "name": "emudevz",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run web",
    "dev": "npm run web",
    "web": "react-app-rewired start",
    "desktop": "concurrently \"cross-env BROWSER=none react-app-rewired start\" \"cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "package": "rm -rf public/levels && node ./scripts/package-levels.js",
    "deploy": "bash ./scripts/deploy.sh",
    "build:web": "cross-env GENERATE_SOURCEMAP=false react-app-rewired build",
    "build:windows": "bash ./scripts/build-desktop-windows.sh",
    "build:linux": "bash ./scripts/build-desktop-linux.sh",
    "___": "___",
    "test": "react-app-rewired test",
    "electron": "electron",
    "react-app-rewired": "react-app-rewired",
    "build:ghpages": "cross-env GENERATE_SOURCEMAP=false PUBLIC_URL=/emudevz react-app-rewired build",
    "build:electron": "cross-env GENERATE_SOURCEMAP=false PUBLIC_URL=./ react-app-rewired build"
  },
  "//": [
    "[!] Packages with fixed versions are conflictive. Do not update them."
  ],
  "dependencies": {
    "@avinlab/react-flash-change": "^1.2.0",
    "@codemirror/language": "6.1.0",
    "@codemirror/theme-one-dark": "6.1.0",
    "@fancyapps/ui": "^4.0.31",
    "@neshacker/6502-tools": "0.1.0",
    "@pixi/layers": "^1.0.11",
    "@rematch/core": "^2.2.0",
    "@rematch/loading": "^2.1.2",
    "@rematch/persist": "^2.1.2",
    "@uiw/codemirror-extensions-langs": "4.12.3",
    "@uiw/react-codemirror": "4.11.6",
    "bootstrap": "^5.2.0",
    "classnames": "^2.2.6",
    "cli-highlight": "^2.1.11",
    "connected-react-router": "^6.9.3",
    "eventemitter3": "^4.0.7",
    "history": "^4.10.1",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "nes-emu": "^1.0.3",
    "pixi-filters": "^4.2.0",
    "pixi-lights": "^3.0.0",
    "pixi.js": "^6.3.0",
    "react": "^17.0.2",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.4.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^5.3.3",
    "react-scripts": "^5.0.1",
    "redux": "^4.2.0",
    "xterm-addon-fit": "^0.5.0",
    "xterm-for-react": "^1.0.4",
    "yaml": "^2.1.1"
  },
  "main": "desktop.js",
  "build": {
    "productName": "emudevz",
    "extends": null,
    "extraFiles": [
      "icons/icon-512x512.png"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "../public/icons/icon-windows.ico",
      "uninstallerIcon": "../public/icons/icon-windows.ico"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.js?(x)"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "no-eval": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "archiver": "^5.3.1",
    "chai": "^4.3.6",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "6.0.12",
    "electron-builder": "21.2.0",
    "husky": "^1.3.1",
    "mkdirp": "^1.0.4",
    "prettier": "2.2.1",
    "pretty-quick": "^1.10.0",
    "react-app-rewired": "^2.2.1"
  }
}
